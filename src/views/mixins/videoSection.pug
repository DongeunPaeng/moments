mixin videoSection(video={})
    .max-w-sm.rounded.overflow-hidden.shadow-lg.m-2
        video#videoContent.w-full.h-64.object-cover.p-1(src=`/${video.fileUrl}` controls)
        .px-6.py-4
            .titleBox.flex.justify-start.items-center
                .text-gray-600.text-xl.mb-2.mr-2#videoTitle=video.title
                button#editVideoTitle.fas.fa-pencil-alt.text-gray-500.text-sm.mb-2
            .text-gray-600.text-sm.mb-2 created by #{video.creator}
            .text-gray-600.text-sm.mb-2 #{video.views} views
            .text-gray-600=video.description
        .px-6.py-4
            span.inline-block.bg-gray-200.rounded-full.px-3.py-1.text-sm.font-semibold.text-gray-600.mx-1.mb-1 #my
            span.inline-block.bg-gray-200.rounded-full.px-3.py-1.text-sm.font-semibold.text-gray-600.mx-1.mb-1 #best
            span.inline-block.bg-gray-200.rounded-full.px-3.py-1.text-sm.font-semibold.text-gray-600.mx-1.mb-1 #moments
            if loggedUser && video.creator === loggedUser.email
                .block
                    button#editVideoTitle.bg-gray-600.text-white.py-1.px-4.mt-4.mx-1.rounded.w-sm(class='hover:bg-gray-800') Edit
                    a(href=`/contents/delete-video/${video.id}`)
                        button.bg-red-600.text-white.py-1.px-4.mt-4.mx-1.rounded.w-sm(class='hover:bg-red-800') Delete