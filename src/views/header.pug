nav.flex.items-center.justify-between.flex-wrap.bg-gray-800.px-6.py-4.font-body.sticky.top-0.z-50.shadow-xl.mb-5
    .flex.items-center.flex-shrink-0.text-white.mr-6.my-2(class="lg:my-0")
        a(href='/').font-semibold.text-lg.tracking-tight #{siteName}
    form.flex.items-center.flex-shrink-0.text-white.mr-6.my-2(action="/search" class="lg:my-0")
        input.shadow.appearance-none.outline-none.border.w-64.rounded.py-2.px-3.text-gray-600.leading-tight(name="search" type="text")
        button(type="submit").text-white.ml-2
            i.fa.fa-search
    .block.my-2
        .text-sm(class='lg:flex-grow')
            if !loggedUser
                a.mt-4.text-white.mr-4(href='/join', class='lg:inline-block lg:mt-0 hover:text-white')
                    | Join
                a.mt-4.text-white.mr-4(href='/login', class='lg:inline-block lg:mt-0 hover:text-white')
                    | Login
            else
                a.mt-4.text-white.mr-4(href='/contents/upload', class='lg:inline-block lg:mt-0 hover:text-white')
                    | Upload
                a.mt-4.text-white.mr-4(href='/logout', class='lg:inline-block lg:mt-0 hover:text-white')
                    | Logout
                a#loggedUser.mt-4.text-white.font-semibold(href='/users/detail' class='lg:inline-block lg:mt-0 hover:text-white')
                    | #{loggedUser.email}